<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>Betting App</h1>
    <% if (locals.errorMessage) { %>
      <p>Error: <%= errorMessage %></p>
    <% } %>
    <form action="/viewSecurity" method="POST">
      <label for="inputSecurity">View security:</label>
      <input type="text" id="inputSecurity" name="inputSecurity">
      <input type="submit" value="OK">
    </form>
    <form action="/viewCreateSecurityPage" method="GET">
      <input type="submit" value="Create new security">
    </form>
  </div>
  <% if (locals.activeSymbols) { %>
    <div id="securities" name="securities">
      <h3>Active securities:</h3>
      <% for (var symbol of activeSymbols) { %>
        <%- include('../partials/linkForSymbol', {symbol:symbol}); %>
      <% } %>
    </div>
  <% } %>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
